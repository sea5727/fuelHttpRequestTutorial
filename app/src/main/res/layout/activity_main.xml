<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_http_request_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="async http request"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <Button
        android:id="@+id/btn_http_request_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sync http request"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_http_request_1"
        />

    <Button
        android:id="@+id/btn_http_request_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="simple http request get 1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_http_request_2"
        />

    <Button
        android:id="@+id/btn_http_request_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="simple http request get 2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_http_request_3"
        />


    <Button
        android:id="@+id/btn_http_request_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="coroutine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_http_request_4"
        />

    <Button
        android:id="@+id/btn_http_request_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http put"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_http_request_5"
        />
</androidx.constraintlayout.widget.ConstraintLayout>